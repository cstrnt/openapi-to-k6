{
  "openapi": "3.0.3",
  "info": {
    "title": "Comprehensive API",
    "version": "1.0.0",
    "description": "API supporting various HTTP methods with query, path parameters, and headers"
  },
  "paths": {
    "/items/{id}": {
      "get": {
        "tags": ["Items"],
        "summary": "Get an item by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the item to retrieve",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "detail",
            "in": "query",
            "required": false,
            "description": "Whether to return detailed information",
            "schema": {
              "type": "boolean",
              "default": false
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response"
          }
        }
      },
      "post": {
        "tags": ["Items"],
        "summary": "Create an item by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the item to create",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Item created successfully"
          }
        }
      },
      "put": {
        "tags": ["Items"],
        "summary": "Update an item by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the item to update",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Item updated successfully"
          }
        }
      },
      "patch": {
        "tags": ["Items"],
        "summary": "Partially update an item by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the item to partially update",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Item partially updated"
          }
        }
      },
      "delete": {
        "tags": ["Items"],
        "summary": "Delete an item by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the item to delete",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Item deleted successfully"
          }
        }
      },
      "head": {
        "tags": ["Items"],
        "summary": "Check if item exists",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the item to check",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Item exists"
          },
          "404": {
            "description": "Item not found"
          }
        }
      }
    },
    "/items-form-url-encoded": {
      "post": {
        "tags": ["ItemsForm", "Items"],
        "summary": "Create an item using form-urlencoded data",
        "requestBody": {
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "required": ["name"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Item created successfully"
          }
        }
      }
    },
    "/items-form-data": {
      "post": {
        "tags": ["ItemsForm", "Items"],
        "summary": "Create an item using form-data",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  }
                },
                "required": ["file", "name"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Item created with file upload"
          }
        }
      }
    },
    "/items-header": {
      "get": {
        "tags": ["ItemsHeader"],
        "summary": "Get an item with custom headers",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "required": true,
            "description": "ID of the item to retrieve",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Item retrieved successfully"
          }
        },
        "requestBody": {
          "required": false
        },
        "headers": [
          {
            "name": "X-Client-ID",
            "in": "header",
            "description": "Client ID for the request",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "X-Request-ID",
            "in": "header",
            "description": "Unique request identifier",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ]
      }
    }
  }
}
